@model string
<ul class="nav flex-column list-group list-group-flush rounded-4 shadow-sm overflow-hidden" style="border-radius: 12px;">
    <li class="nav-item">
        <a class="list-group-item list-group-item-action d-flex align-items-center gap-2 account-menu-item @(Model == "Profile" ? "active" : "")"
            asp-controller="account" asp-action="profile"
           data-section="Profile" style="cursor: pointer;">
            <i class="bi bi-person-circle fs-5"></i>
            <span>Thông tin cá nhân</span>
        </a>
    </li>
    <li class="nav-item">
        <a class="list-group-item list-group-item-action d-flex align-items-center gap-2 account-menu-item @(Model == "Orders" ? "active" : "")"
           asp-controller="account" asp-action="orders"
           data-section="Orders" style="cursor: pointer;">
            <i class="bi bi-cart-check fs-5"></i>
            <span>Lịch sử đặt hàng</span>
        </a>
    </li>
    <li class="nav-item">
        <a class="list-group-item list-group-item-action d-flex align-items-center gap-2 account-menu-item @(Model == "Vouchers" ? "active" : "")"
           asp-controller="account" asp-action="vouchers"
           data-section="Vouchers" style="cursor: pointer;">
            <i class="bi bi-gift fs-5"></i>
            <span>Voucher</span>
        </a>
    </li>
</ul>
