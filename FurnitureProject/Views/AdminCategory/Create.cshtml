@model FurnitureProject.Models.DTO.CategoryDTO
@* @using WebApplication1.Enums *@
@{
    ViewData["Title"] = "Thêm danh mục";
}
<div class="title-box">
    <div class="text-box">
        <span class="title">Thêm danh mục sản phẩm</span>
    </div>
</div>
<div class="title-box">
        <div class="card-body">
        <form asp-controller="AdminCategory" asp-action="Create" method="post">
                @* <input type="hidden" asp-for="Id" value="CAT@(DateTime.Now.Ticks)" /> *@
            <div class="d-flex flex-wrap gap-4">
                <div style="flex: 0 0 30%;">
                    <label asp-for="Name" class="form-label fw-medium"></label>
                    <input asp-for="Name" class="form-control custom-gray-input" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div style="flex: 0 0 30%;">
                    <label asp-for="Description" class="form-label fw-medium"></label>
                    <input asp-for="Description" class="form-control custom-gray-input" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div style="flex: 0 0 30%;">
                    <label asp-for="Status" class="form-label fw-medium"></label>
                    <select asp-for="Status" class="form-control custom-gray-input" asp-items="ViewBag.StatusList"></select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-end mt-4">
                <button type="submit" class="btn-custom bg-conflowerblue px-4">Lưu danh mục</button>
            </div>
            </form>
        </div>
</div>