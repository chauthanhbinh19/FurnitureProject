@model FurnitureProject.Models.ViewModels.CartViewModel

@{
    ViewData["Title"] = "Giỏ hàng của bạn";
    var cartItems = Model.ProductsInCart.ToList();
    decimal total = Model.ProductsInCart.Sum(item =>
    (item.DiscountPrice > 0 ? item.DiscountPrice : item.Price) * item.Quantity
    );
}

<div class="container py-5">
    <h2 class="text-center mb-4">Giỏ hàng của bạn</h2>

    @if (!cartItems.Any())
    {
        <div class="alert alert-info text-center">
            Giỏ hàng trống. <a asp-controller="Product" asp-action="AllProducts">Tiếp tục mua sắm</a>
        </div>
    }
    else
    {
        <div class="row mb-3 d-flex flex-wrap gap-4">
            <!-- Cột trái: Danh sách sản phẩm -->
            <div class="col-md-7-5">
                <div class="card shadow rounded-4">
                    <div class="card-body">
                        <div class="table-responsive rounded-4 overflow-hidden rounded-4">
                            <table class="table table-hover align-middle mb-0 bg-white">
                                <thead class="bg-light">
                                    <tr>
                                        <th>Sản phẩm</th>
                                        <th class="text-center">Số lượng</th>
                                        <th class="text-end">Đơn giá</th>
                                        <th class="text-end">Thành tiền</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ProductsInCart)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="@(item.ImageUrls != null && item.ImageUrls.Any() ? item.ImageUrls[0] : "/images/No_Image_Available.jpg")"
                                                         alt="Ảnh" class="rounded-4 me-3"
                                                         style="width: 70px; height: 70px; object-fit: cover;">
                                                    <div>
                                                        <p class="fw-bold mb-1">@item.Name</p>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <div class="d-flex justify-content-center">
                                                    <form class="update-form" method="post" asp-controller="Cart" asp-action="UpdateQuantity">
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <div class="quantity-input d-flex align-items-center border rounded overflow-hidden" style="width: 140px;">
                                                            <button type="button" class="btn btn-primary border-0 rounded-0 flex-fill" onclick="changeQuantity(this, -1)">−</button>
                                                            <input name="quantity" type="number" class="form-control text-center border-0 quantity" value="@item.Quantity" min="1" style="max-width: 60px;">
                                                            <button type="button" class="btn btn-primary border-0 rounded-0 flex-fill" onclick="changeQuantity(this, 1)">+</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </td>
                                            <td class="text-end">
                                                @if (item.DiscountPrice > 0)
                                                {
                                                    <span class="text-danger fw-bold">@item.DiscountPrice.ToString("N0") ₫</span>

                                                    <br />
                                                    <span class="text-muted text-decoration-line-through">@item.Price.ToString("N0") ₫</span>
                                                }
                                                else
                                                {
                                                    <span>@item.Price.ToString("N0") ₫</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.DiscountPrice > 0)
                                                {
                                                    <td class="text-end fw-bold">@((item.DiscountPrice * item.Quantity).ToString("N0")) ₫</td>
                                                }
                                                else
                                                {
                                                    <td class="text-end fw-bold">@((item.Price * item.Quantity).ToString("N0")) ₫</td>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <form asp-controller="Cart" asp-action="Delete" method="post" style="display:inline;"
                                                      onsubmit="return confirm('Bạn có chắc chắn muốn xoá thẻ này không?');">
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <button type="submit" class="bg-transparent border-0 p-0" data-id="@item.Id" title="Xoá">
                                                        <i class="bi bi-trash text-danger fw-bold fs-5"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Cột phải: Tóm tắt đơn hàng -->
            <div class="col-md-4">
                <div class="card shadow rounded-4">
                    <div class="card-body">
                        <h5 class="card-title mb-4">🧾 Thông tin đơn hàng</h5>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Số lượng sản phẩm:</span>
                            <span class="fw-bold">@Model.ProductsInCart.Sum(x => x.Quantity)</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tổng tiền:</span>
                            <span class="fw-bold text-danger">@total.ToString("N0") ₫</span>
                        </div>

                        <hr>

                        <div class="d-grid gap-2 mt-4">
                            <a asp-controller="Payment" asp-action="Index" class="btn btn-success btn-lg">Thanh toán</a>
                            <a asp-controller="Product" asp-action="AllProducts" class="btn btn-outline-secondary">← Tiếp tục mua sắm</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    <script>
        function changeQuantity(button, delta) {
            const form = button.closest("form");
            const input = form.querySelector(".quantity");

            let value = parseInt(input.value);
            if (isNaN(value)) value = 1;

            value += delta;
            if (value < 1) value = 1;

            input.value = value;

            form.submit();
        }
    </script>

}
