@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}
<div class="title-box">
    <div class="text-box">
        <span class="title">Chỉnh sửa sản phẩm</span>
    </div>
</div>
<div class="title-box">
        <div class="card-body">
        <form asp-controller="AdminProduct" asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" value="@Model.Id" />
            <div class="d-flex flex-wrap gap-4">
                <div style="flex: 0 0 30%;">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" value="@Model.Name"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div style="flex: 0 0 30%;">
                    <label asp-for="Description" class="form-label"></label>
                    <input asp-for="Description" class="form-control" value="@Model.Description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div style="flex: 0 0 30%;">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" value="@Model.Price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div style="flex: 0 0 30%;">
                    <label asp-for="Stock" class="form-label"></label>
                    <input asp-for="Stock" class="form-control" value="@Model.Stock" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>

                <div style="flex: 0 0 30%;">
                    <label asp-for="CategoryId" class="form-label"></label>
                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories"></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-end mt-4">
                <button type="submit" class="btn-custom bg-conflowerblue px-4">Lưu sản phẩm</button>
            </div>
            </form>
        </div>
</div>