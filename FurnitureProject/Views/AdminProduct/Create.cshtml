@model FurnitureProject.Models.Product
@{
    ViewData["Title"] = "Thêm sản phẩm";
}
<div class="title-box">
    <div class="text-box">
        <span class="title">Thêm sản phẩm</span>
    </div>
</div>
<div class="title-box">
        <div class="card-body">
        <form id="productForm" asp-controller="AdminProduct" asp-action="Create" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" value="PRO@(DateTime.Now.Ticks)" />
                <div class="d-flex flex-wrap gap-4">
                    <div style="flex: 0 0 30%;">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div style="flex: 0 0 30%;">
                        <label asp-for="Description" class="form-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div style="flex: 0 0 30%;">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div style="flex: 0 0 30%;">
                        <label asp-for="Stock" class="form-label"></label>
                        <input asp-for="Stock" class="form-control" />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>

                    <div style="flex: 0 0 30%;">
                        <label asp-for="CategoryId" class="form-label"></label>
                        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories"></select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex flex-wrap gap-4 my-4">
                    <div class="flex: 0 0 30%;">
                        <label class="form-label">Upload Images</label>
                        <input class="form-control" type="file" id="fileInput" name="files" multiple accept="image/*" />
                        <div id="imagePreviewList" class="d-flex flex-wrap gap-3 mt-3"></div>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn-custom bg-conflowerblue px-4">Lưu sản phẩm</button>
                </div>
            </form>
        </div>
</div>
@section Scripts {
    <script>

        let selectedFiles = [];

        document.getElementById('fileInput').addEventListener('change', function (e) {
            // console.log('Files selected:', e.target.files);
            const newFiles = Array.from(e.target.files);
            newFiles.forEach(f => {
                if (!selectedFiles.some(sf => sf.name === f.name && sf.size === f.size)) {
                    selectedFiles.push(f);
                }
            });
            updateFileInput();
            renderImagePreviews();
            // e.target.value = '';
        });

        function updateFileInput() {
            const dataTransfer = new DataTransfer();
            selectedFiles.forEach(f => dataTransfer.items.add(f));
            document.getElementById('fileInput').files = dataTransfer.files;
            // console.log(document.getElementById('fileInput').files.length);
        }

        function renderImagePreviews() {
            const previewList = document.getElementById('imagePreviewList');
            previewList.innerHTML = '';
            selectedFiles.forEach((file, idx) => {
                const reader = new FileReader();
                reader.onload = function (event) {
                    const div = document.createElement('div');
                    div.className = 'position-relative d-inline-block m-2';
                    div.style.width = '120px';
                    div.style.height = '120px';

                    const img = document.createElement('img');
                    img.src = event.target.result;
                    img.className = 'img-thumbnail';
                    img.style.width = '100%';
                    img.style.height = '100%';
                    img.style.objectFit = 'cover';

                    const btn = document.createElement('button');
                    btn.type = 'button';
                    btn.className = 'btn btn-danger btn-sm position-absolute top-0 end-0 m-1';
                    btn.innerHTML = '&times;';
                    btn.onclick = function () {
                        selectedFiles.splice(idx, 1);
                        updateFileInput();
                        renderImagePreviews();
                    };

                    div.appendChild(img);
                    div.appendChild(btn);
                    previewList.appendChild(div);
                };
                reader.readAsDataURL(file);
            });
        }

        // document.getElementById('productForm').addEventListener('submit', function (e) {
        //     if (!selectedFiles || selectedFiles.length === 0) {
        //         alert('Bạn chưa chọn file ảnh nào!');
        //         e.preventDefault();
        //     }
        //     console.log(document.getElementById('fileInput').files.length);
        //     e.preventDefault();
        // });
    </script>
}