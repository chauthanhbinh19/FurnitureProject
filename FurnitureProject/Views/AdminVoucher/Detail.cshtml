@model FurnitureProject.Models.DTO.VoucherDTO

@{
    ViewBag.Title = "Chi tiết mã giảm giá";
}
<div class="title-box">
    <div class="text-box">
        <span class="title ms-2">Chi tiết mã giảm giá</span>
    </div>
</div>
<div class="container mt-4 pb-5">
    <div class="row gx-4 gy-3 justify-content-between">
            <div class="card shadow mb-3">
                <div class="card-header text-black fs-5 d-flex align-items-center gap-2">
                    <i class="fas fa-circle-info text-conflowerblue"></i>
                    <span>Thông tin mã giảm giá</span>
                </div>
                <div class="card-body">
                    <div class="row mb-3 d-flex flex-wrap gap-4">
                        <div class="col-md-5">
                            <label asp-for="Code" class="form-label fw-semibold"></label>
                            <span class="form-control custom-gray-input">
                                @if (Model.Code == null)
                                {
                                    <span class="text-muted">N/A</span>
                                }else
                                {
                                    <span>@Model.Code</span>
                                }
                            </span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="DiscountPercent" class="form-label fw-semibold"></label>
                            <span class="form-control custom-gray-input">
                                @if (Model.DiscountPercent == 0)
                                {
                                    <span class="text-muted">0</span>
                                }else
                                {
                                    <span>@Model.DiscountPercent</span>
                                }
                            </span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="DiscountAmount" class="form-label fw-semibold"></label>
                            <span class="form-control custom-gray-input">
                                @if (Model.DiscountAmount == 0)
                                {
                                    <span class="text-muted">0</span>
                                }else
                                {
                                    <span>@Model.DiscountAmount</span>
                                }
                            </span>
                        </div>
                    </div>

                    <div class="row mb-3 d-flex flex-wrap gap-4">
                        <div class="col-md-3">
                            <label asp-for="ExpiryDate" class="form-label fw-semibold"></label>
                            <span class="form-control custom-gray-input">
                                @if (Model.ExpiryDate == null)
                                {
                                    <span class="text-muted">N/A</span>
                                }else
                                {
                                    <span>@Model.ExpiryDate</span>
                                }
                            </span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="UsageLimit" class="form-label fw-semibold"></label>
                            <span class="form-control custom-gray-input">
                                @if (Model.UsageLimit == 0)
                                {
                                    <span class="text-muted">0</span>
                                }else
                                {
                                    <span>@Model.UsageLimit</span>
                                }
                            </span>
                        </div>
                        <div class="col-md-3 mb-3 d-flex flex-column">
                            <label asp-for="Status" class="form-label fw-semibold"></label>
                            <div">
                                @if (Model.Status == null)
                                {
                                    <span class="text-muted">N/A</span>
                                }
                                else
                                {
                                    @if (Model.Status == "active")
                                    {
                                        <span class="badge active-badge">
                                            <i class="bi bi-check-circle-fill me-1"></i> Hoạt động
                                        </span>
                                    }
                                    else if (Model.Status == "inactive")
                                    {
                                        <span class="badge inactive-badge" ">
                                            <i class="bi bi-pause-circle-fill me-1"></i> Không hoạt động
                                        </span>
                                    }
                                    else if (Model.Status == "banned")
                                    {
                                        <span class="badge">
                                            <i class="bi bi-slash-circle-fill me-1"></i> Bị khóa
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge">
                                            <i class="bi bi-question-circle-fill me-1"></i> @Model.Status
                                        </span>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row gx-4 gy-3 justify-content-between">
            <div class="card shadow mb-3">
                <div class="card-header text-black fs-5 d-flex align-items-center gap-2">
                    <i class="fas fa-search text-conflowerblue"></i>
                    <span>Áp dụng sản phẩm</span>
                </div>
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th></th>
                            <th>Hình ảnh</th>
                            <th>Tên sản phẩm</th>
                            <th>Giá</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr class="@(product.VoucherStatus == "In Voucher" ? "table-secondary" : "")"
                                title="@(product.VoucherStatus == "In Voucher" ? "This product is currently in a voucher and cannot be selected." : "")">
                                <td>
                                    <input class="form-check-input" type="checkbox"
                                           name="SelectedProductIds"
                                           value="@product.Id"
                                           id="product_@product.Id"
                                           @(Model.SelectedProductIds.Contains(product.Id) ? "checked" : "")
                                           @(product.VoucherStatus == "In Voucher" ? "disabled" : "")
                                           title="@(product.VoucherStatus == "In Voucher" ? "This product is in a voucher" : "")" />
                                </td>
                                <td>
                                    <img src="@(product.ImageUrls != null && product.ImageUrls.Count > 0
                                                                                          ? product.ImageUrls[0]
                                                                                          : Url.Content("~/images/No_Image_Available.jpg"))"
                                         alt="Product image"
                                         style="width: 120px; height: 90px; border-radius:5px;" />
                                </td>
                                <td>
                                    <label class="form-check-label" for="product_@product.Id">
                                        @product.Name
                                    </label>
                                </td>
                                <td>
                                    @product.Price.ToString("N0") ₫
                                </td>
                                <td>
                                    @if (product.VoucherStatus == "In Voucher")
                                    {
                                        <span class="badge bg-danger">In Voucher</span>
                                    }
                                    else if (product.VoucherStatus == "Available")
                                    {
                                        <span class="badge bg-success">Available</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@product.VoucherStatus</span> <!-- fallback -->
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>>    
</div>
