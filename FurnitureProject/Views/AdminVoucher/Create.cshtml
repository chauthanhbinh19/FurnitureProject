@model FurnitureProject.Models.Voucher

@{
    ViewBag.Title = "Tạo mã giảm giá";
}
<div class="title-box">
    <div class="text-box">
        <span class="title">Tạo mã giảm giá</span>
    </div>
</div>
<div class="title-box">
    <div class="card-body">
        <form asp-controller="AdminVoucher" asp-action="Create" method="post">
            <div class="row mb-3 d-flex flex-wrap gap-4">
                <div class="col-md-5">
                    <label asp-for="Code" class="form-label fw-semibold">Mã giảm giá</label>
                    <input asp-for="Code" class="form-control custom-gray-input" placeholder="Ví dụ: SUMMER25" />
                    <span asp-validation-for="Code" class="text-danger small"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="DiscountPercent" class="form-label fw-semibold">Giảm giá (%)</label>
                    <input asp-for="DiscountPercent" type="number" min="0" max="100" class="form-control" placeholder="0 - 100" />
                    <span asp-validation-for="DiscountPercent" class="text-danger small"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="DiscountAmount" class="form-label fw-semibold">Số tiền giảm</label>
                    <input asp-for="DiscountAmount" type="number" step="1000" min="0" class="form-control" placeholder="VND" />
                    <span asp-validation-for="DiscountAmount" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-3 d-flex flex-wrap gap-4">
                <div class="col-md-3">
                    <label asp-for="ExpiryDate" class="form-label fw-semibold">Ngày hết hạn</label>
                    <input asp-for="ExpiryDate" type="date" class="form-control" />
                    <span asp-validation-for="ExpiryDate" class="text-danger small"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="UsageLimit" class="form-label fw-semibold">Số lượt sử dụng</label>
                    <input asp-for="UsageLimit" type="number" class="form-control" min="1" />
                    <span asp-validation-for="UsageLimit" class="text-danger small"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Status" class="form-label fw-semibold">Trạng thái</label>
                    <select asp-for="Status" class="form-select">
                        <option value="active">Hoạt động</option>
                        <option value="inactive">Tạm ngưng</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger small"></span>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-end">
                <button type="submit" class="btn-custom bg-conflowerblue px-4">Lưu</button>
            </div>
        </form>
    </div>
</div>
