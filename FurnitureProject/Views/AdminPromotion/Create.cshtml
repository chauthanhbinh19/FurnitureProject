@model FurnitureProject.Models.DTO.PromotionDTO

@{
    ViewBag.Title = "Thêm khuyến mãi";
}
<div class="title-box">
    <div class="text-box">
        <span class="title ms-2">Thêm khuyến mãi</span>
    </div>
</div>
<div class="container mt-4 pb-5">
    <form asp-controller="AdminPromotion" asp-action="Create" method="post">
        <div class="row gx-4 gy-3 justify-content-between">
            <div class="card shadow mb-3">
                <div class="card-header text-black fs-5 d-flex align-items-center gap-2">
                    <i class="fas fa-circle-info text-conflowerblue"></i>
                    <span>Thông tin khuyến mãi</span>
                </div>
                <div class="card-body">
                    <div class="row mb-3 d-flex flex-wrap gap-4">
                        <div class="col-md-6">
                            <label asp-for="@Model.Title" class="form-label fw-medium">Tên chương trình</label>
                            <input asp-for="@Model.Title" class="form-control custom-gray-input" placeholder="Ví dụ: Khuyến mãi hè 2025" />
                            <span asp-validation-for="@Model.Title" class="text-danger small"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="@Model.DiscountPercent" class="form-label fw-medium">Phần trăm giảm giá (%)</label>
                            <input asp-for="@Model.DiscountPercent" class="form-control custom-gray-input" type="number" placeholder="0 - 100" />
                            <span asp-validation-for="@Model.DiscountPercent" class="text-danger small"></span>
                        </div>
                        <div class="col-md-2">
                            <label asp-for="Status" class="form-label fw-medium"></label>
                            <select asp-for="Status" class="form-control custom-gray-input" asp-items="ViewBag.StatusList"></select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="@Model.Description" class="form-label fw-medium">Mô tả</label>
                        <textarea asp-for="@Model.Description" class="form-control custom-gray-input" rows="5" placeholder="Mô tả chi tiết về chương trình khuyến mãi..."></textarea>
                        <span asp-validation-for="@Model.Description" class="text-danger small"></span>
                    </div>

                    <div class="row mb-3 d-flex flex-wrap gap-4">
                        <div class="col-md-4">
                            <label asp-for="@Model.StartDate" class="form-label fw-medium">Ngày bắt đầu</label>
                            <input asp-for="@Model.StartDate" type="date" class="form-control custom-gray-input" />
                            <span asp-validation-for="@Model.StartDate" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="@Model.EndDate" class="form-label fw-medium">Ngày kết thúc</label>
                            <input asp-for="@Model.EndDate" type="date" class="form-control custom-gray-input" />
                            <span asp-validation-for="@Model.EndDate" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row gx-4 gy-3 justify-content-between">
            <div class="card shadow mb-3">
                <div class="card-header text-black fs-5 d-flex align-items-center gap-2">
                    <i class="fas fa-search text-conflowerblue"></i>
                    <span>Áp dụng cho sản phẩm</span>
                </div>
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th></th>
                            <th>Hình ảnh</th>
                            <th>Tên sản phẩm</th>
                            <th>Giá</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr class="@(product.PromotionStatus == "In Promotion" ? "table-secondary" : "")"
                                title="@(product.PromotionStatus == "In Promotion" ? "This product is currently in a promotion and cannot be selected." : "")">
                                <td>
                                    <input class="form-check-input" type="checkbox"
                                           name="SelectedProductIds"
                                           value="@product.Id"
                                           id="product_@product.Id"
                                           @(Model.SelectedProductIds.Contains(product.Id) ? "checked" : "")
                                           @(product.PromotionStatus == "In Promotion" ? "disabled" : "")
                                           title="@(product.PromotionStatus == "In Promotion" ? "This product is in a promotion" : "")" />
                                </td>
                                <td>
                                    <img src="@(product.ImageUrls != null && product.ImageUrls.Count > 0
                                                                                          ? product.ImageUrls[0]
                                                                                          : Url.Content("~/images/No_Image_Available.jpg"))"
                                         alt="Product image"
                                         style="width: 120px; height: 90px; border-radius:5px;" />
                                </td>
                                <td>
                                    <label class="form-check-label" for="product_@product.Id">
                                        @product.Name
                                    </label>
                                </td>
                                <td>
                                    @product.Price.ToString("N0") ₫
                                </td>
                                <td>
                                    @if (product.PromotionStatus == "In Promotion")
                                    {
                                        <span class="badge bg-danger">In Promotion</span>
                                    }
                                    else if (product.PromotionStatus == "Available")
                                    {
                                        <span class="badge bg-success">Available</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@product.PromotionStatus</span> <!-- fallback -->
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="d-flex justify-content-end">
                <button type="submit" class="btn-custom bg-conflowerblue px-4">Lưu</button>
        </div>  
    </form>
</div>

