@model FurnitureProject.Models.DTO.PromotionDTO

@{
    ViewBag.Title = "Chi tiết khuyến mãi";
}
<div class="title-box">
    <div class="text-box">
        <span class="title ms-2">Chi tiết khuyến mãi</span>
    </div>
</div>
<div class="container mt-4 pb-5">
    <div class="row gx-4 gy-3 justify-content-between">
        <div class="card shadow mb-3">
            <div class="card-header text-black fs-5 d-flex align-items-center gap-2">
                <i class="fas fa-circle-info text-conflowerblue"></i>
                <span>Thông tin khuyến mãi</span>
            </div>
            <div class="card-body">
                <div class="row mb-3 d-flex flex-wrap gap-4">
                    <div class="col-md-6">
                        <label asp-for="Title" class="form-label fw-medium"></label>
                        <p class="form-control custom-gray-input">
                            @if (@Model.Title != null)
                            {
                                @Model.Title
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </p>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="DiscountPercent" class="form-label fw-medium"></label>
                        <p class="form-control custom-gray-input">@Model.DiscountPercent%
                            @if (@Model.DiscountPercent != 0)
                            {
                                @Model.DiscountPercent
                            }
                            else
                            {
                                <span class="text-muted">0</span>
                            }
                        </p>
                    </div>
                    <div class="col-md-2">
                        <label asp-for="Status" class="form-label fw-medium"></label>
                        <div>
                            @if (Model.Status == "active")
                            {
                                <span class="badge active-badge">
                                    <i class="bi bi-check-circle-fill me-1"></i> Hoạt động
                                </span>
                            }
                            else if (Model.Status == "inactive")
                            {
                                <span class="badge inactive-badge" ">
                                    <i class="bi bi-pause-circle-fill me-1"></i> Không hoạt động
                                </span>
                            }
                            else if (Model.Status == "banned")
                            {
                                <span class="badge">
                                    <i class="bi bi-slash-circle-fill me-1"></i> Bị khóa
                                </span>
                            }
                            else
                            {
                                <span class="badge">
                                    <i class="bi bi-question-circle-fill me-1"></i> @Model.Status
                                </span>
                            }
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-medium">Mô tả</label>
                    <div class="form-control custom-gray-input" style="white-space: pre-line;">
                        @Model.Description
                    </div>
                </div>

                <div class="row mb-3 d-flex flex-wrap gap-4">
                    <div class="col-md-4">
                        <label class="form-label fw-medium">Ngày bắt đầu</label>
                        <p class="form-control custom-gray-input">@Model.StartDate.ToString("dd/MM/yyyy")</p>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-medium">Ngày kết thúc</label>
                        <p class="form-control custom-gray-input">@Model.EndDate.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row gx-4 gy-3 justify-content-between">
        <div class="card shadow mb-3">
            <div class="card-header text-black fs-5 d-flex align-items-center gap-2">
                <i class="fas fa-search text-conflowerblue"></i>
                <span>Áp dụng cho sản phẩm</span>
            </div>
            <table class="table table-bordered table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Hình ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.Products)
                    {
                        <tr class="@(product.PromotionStatus == "In Promotion" ? "table-secondary" : "")">
                            <td>
                                <img src="@(product.ImageUrls != null && product.ImageUrls.Count > 0
                                                                                               ? product.ImageUrls[0]
                                                                                               : Url.Content("~/images/No_Image_Available.jpg"))"
                                 alt="Product image"
                                 style="width: 120px; height: 90px; border-radius:5px;" />
                        </td>
                        <td>@product.Name</td>
                        <td>@product.Price.ToString("N0") ₫</td>
                        <td>
                            @if (product.PromotionStatus == "In Promotion")
                                {
                                    <span class="badge bg-danger">In Promotion</span>
                                }
                                else if (product.PromotionStatus == "Available")
                                {
                                    <span class="badge bg-success">Available</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@product.PromotionStatus</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
