@model FurnitureProject.Models.ViewModels.AddressViewModel
@{
    ViewBag.Title = "Search Address";
    string keyword = ViewBag.Keyword as string;
    int totalPages = (int)Math.Ceiling((double)ViewBag.TotalAddresses / ViewBag.PageSize);
    int currentPage = ViewBag.CurrentPage;
}
@{
    int maxPagesToShow = 8;
    int startPage = Math.Max(1, currentPage - maxPagesToShow / 2);
    int endPage = Math.Min(totalPages, startPage + maxPagesToShow - 1);
    if (endPage - startPage + 1 < maxPagesToShow)
    {
        startPage = Math.Max(1, endPage - maxPagesToShow + 1);
    }
}
@if (ViewBag.UserIdToCheckAddress != null)
{
    <div class="table-responsive title-box">
        <div class="container">
            <div class="row mb-3 d-flex flex-wrap gap-4">
                <div class="col-md-3">
                    <div class="input-group">
                        <input id="AddressUserId" type="hidden" name="userId" value="@ViewBag.UserIdToCheckAddress" class="form-control form-control-sm" placeholder="Nhập từ khóa...">
                        <input id="AddressSearchKeyWord" type="text" asp-for="Filter.SearchKeyWord" name="search" value="@keyword" class="form-control form-control-sm" placeholder="Nhập từ khóa...">
                        <button type="button" id="btnAddressFilterSearch" class="btn btn-sm btn-custom bg-conflowerblue">
                            <i class="bi bi-search"></i> Tìm kiếm
                        </button>
                    </div>
                </div>
                <!-- Optional: Nút Reset -->
                <div class="col-md-1-5 d-flex align-items-center">
                    <a href="javascript:void(0)" id="btnAddressResetFilter" class="btn btn-secondary w-100">Xoá lọc</a>
                </div>
            </div>
            <div class="row mb-3">
                <table class="table table-hover align-middle">
                    <thead class="table-background">
                        <tr>
                            <th>
                                <input type="checkbox" id="selectAllAddresses" class="form-check-input" />
                            </th>
                            @* <th>ID</th> *@
                            <th class="col with-separator">
                                <div class="d-flex align-items-center sort-wrapper">
                                    Địa chỉ
                                    <div class="sort-arrows">
                                        <a href="#"
                                           class="sort-link address-sort-link @(Model.Filter.SortColumn == "Street" && Model.Filter.SortDirection == "asc" ? "active-arrow" : "")"
                                           data-sort-column="Street"
                                           data-sort-direction="asc">▲</a>
                                        <a href="#"
                                           class="sort-link address-sort-link @(Model.Filter.SortColumn == "Street" && Model.Filter.SortDirection == "desc" ? "active-arrow" : "")"
                                           data-sort-column="Street"
                                           data-sort-direction="desc">▼</a>
                                    </div>
                                </div>
                            </th>
                            <th class="col with-separator">
                                <div class="d-flex align-items-center sort-wrapper">
                                    Phường/Xã
                                    <div class="sort-arrows">
                                        <a href="#"
                                           class="sort-link address-sort-link @(Model.Filter.SortColumn == "Ward" && Model.Filter.SortDirection == "asc" ? "active-arrow" : "")"
                                           data-sort-column="Ward"
                                           data-sort-direction="asc">▲</a>
                                        <a href="#"
                                           class="sort-link address-sort-link @(Model.Filter.SortColumn == "Ward" && Model.Filter.SortDirection == "desc" ? "active-arrow" : "")"
                                           data-sort-column="Ward"
                                           data-sort-direction="desc">▼</a>
                                    </div>
                                </div>
                            </th>
                            <th class="col with-separator">
                                <div class="d-flex align-items-center sort-wrapper">
                                    Quận/Huyện
                                    <div class="sort-arrows">
                                        <a href="#"
                                           class="sort-link address-sort-link @(Model.Filter.SortColumn == "District" && Model.Filter.SortDirection == "asc" ? "active-arrow" : "")"
                                           data-sort-column="District"
                                           data-sort-direction="asc">▲</a>
                                        <a href="#"
                                           class="sort-link address-sort-link @(Model.Filter.SortColumn == "District" && Model.Filter.SortDirection == "desc" ? "active-arrow" : "")"
                                           data-sort-column="District"
                                           data-sort-direction="desc">▼</a>
                                    </div>
                                </div>
                            </th>
                            <th class="col with-separator">
                                <div class="d-flex align-items-center sort-wrapper">
                                    Thành phố/Tỉnh
                                    <div class="sort-arrows">
                                        <a href="#"
                                           class="sort-link address-sort-link @(Model.Filter.SortColumn == "City" && Model.Filter.SortDirection == "asc" ? "active-arrow" : "")"
                                           data-sort-column="City"
                                           data-sort-direction="asc">▲</a>
                                        <a href="#"
                                           class="sort-link address-sort-link @(Model.Filter.SortColumn == "City" && Model.Filter.SortDirection == "desc" ? "active-arrow" : "")"
                                           data-sort-column="City"
                                           data-sort-direction="desc">▼</a>
                                    </div>
                                </div>
                            </th>
                            <th class="col with-separator">
                                <div class="d-flex align-items-center sort-wrapper">
                                    Quốc gia
                                    <div class="sort-arrows">
                                        <a href="#"
                                           class="sort-link address-sort-link @(Model.Filter.SortColumn == "Country" && Model.Filter.SortDirection == "asc" ? "active-arrow" : "")"
                                           data-sort-column="Country"
                                           data-sort-direction="asc">▲</a>
                                        <a href="#"
                                           class="sort-link address-sort-link @(Model.Filter.SortColumn == "Country" && Model.Filter.SortDirection == "desc" ? "active-arrow" : "")"
                                           data-sort-column="Country"
                                           data-sort-direction="desc">▼</a>
                                    </div>
                                </div>
                            </th>
                            <th class="col with-separator">
                                <div class="d-flex align-items-center sort-wrapper">
                                    Mã bưu điện
                                    <div class="sort-arrows">
                                        <a href="#"
                                           class="sort-link address-sort-link @(Model.Filter.SortColumn == "PostalCode" && Model.Filter.SortDirection == "asc" ? "active-arrow" : "")"
                                           data-sort-column="PostalCode"
                                           data-sort-direction="asc">▲</a>
                                        <a href="#"
                                           class="sort-link address-sort-link @(Model.Filter.SortColumn == "PostalCode" && Model.Filter.SortDirection == "desc" ? "active-arrow" : "")"
                                           data-sort-column="PostalCode"
                                           data-sort-direction="desc">▼</a>
                                    </div>
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var address in Model.Addresses)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox"
                                           class="address-id address-checkbox form-check-input"
                                           data-id="@address.Id"
                                           data-street="@address.Street"
                                           data-ward="@address.Ward"
                                           data-district="@address.District"
                                           data-city="@address.City"
                                           data-country="@address.Country"
                                           data-postal-code="@address.PostalCode"
                                           value="@address.Id" />
                                </td>
                                <td>@address.Street</td>
                                <td>@address.Ward</td>
                                <td>@address.District</td>
                                <td>@address.City</td>
                                <td>@address.Country</td>
                                <td>@address.PostalCode</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="pagination-box">
        <nav>
            <ul class="pagination justify-content-center">

                <!-- Previous button -->
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link address-pagination-ajax"
                       href="#"
                       data-page="@(currentPage - 1)"
                       aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                <!-- Page numbers -->
                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link address-pagination-ajax"
                           href="#"
                           data-page="@i">
                            @i
                        </a>
                    </li>
                }

                <!-- Next button -->
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link address-pagination-ajax"
                       href="#"
                       data-page="@(currentPage + 1)"
                       aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>

            </ul>
        </nav>
    </div>
}
else
{
    <span>Chọn khách hàng để có thể lấy được địa chỉ</span>
}

