@model dynamic
<div class="card h-100 shadow-sm p-2" style="max-width: 250px;">
    <img src="/images/@Model.ImageUrls[0]" class="card-img-top"
         alt="@Model.Name"
         style="width: max-content; height: 235px; object-fit: cover; margin: 0 auto;" />
    <div class="card-body p-2">
        <h5 class="card-title" style="font-size: 1rem;">@Model.Name</h5>
        <p class="card-text" style="font-size: 0.9rem; max-height: 40px; overflow: hidden;">@Model.Description</p>
        <h5 class="card-title" style="font-size: 1rem;">@Model.Price $</h5>
        <a href="" class="btn btn-primary btn-sm w-100">Xem chi tiết</a>
    </div>
</div>