    Layout = "_Layout"; // hoặc dùng layout rút gọn nếu không cần header/footer
}

<div class="container text-center py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <img src="~/images/maintenance.svg" alt="Maintenance" class="img-fluid mb-4" style="max-height: 300px;" />
