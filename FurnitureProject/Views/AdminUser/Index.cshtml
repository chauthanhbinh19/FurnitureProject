@model FurnitureProject.Models.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Người dùng";
}
@{
    ViewBag.Title = "Search User";
    string keyword = ViewBag.Keyword as string;
    int totalPages = (int)Math.Ceiling((double)ViewBag.TotalUsers / ViewBag.PageSize);
    int currentPage = ViewBag.CurrentPage;
}
@{
    int maxPagesToShow = 8;
    int startPage = Math.Max(1, currentPage - maxPagesToShow / 2);
    int endPage = Math.Min(totalPages, startPage + maxPagesToShow - 1);
    if (endPage - startPage + 1 < maxPagesToShow)
    {
        startPage = Math.Max(1, endPage - maxPagesToShow + 1);
    }
}


<div class="title-box">
    <div class="text-box">
        <span class="title ms-2">Danh sách người dùng</span>
    </div>
    <div>
        <a asp-area="" asp-controller="AdminUser" asp-action="Create" class="link-custom btn-custom bg-conflowerblue">Thêm người dùng</a>
    </div>
</div>
<div class="table-responsive title-box">
    <div class="container">
        <form method="get" asp-controller="AdminUser" asp-action="Index" class="link-custom">
            <div class="row mb-3 justify-content-around">
                <div class="col-md-3">
                    <div class="input-group">
                        <input type="text" name="search" value="@keyword" class="form-control" placeholder="Nhập từ khóa...">
                        <button type="submit" class="btn-custom bg-conflowerblue">
                            <i class="bi bi-search"></i> Tìm kiếm
                        </button>
                    </div>
                </div>
                <!-- Sort by Create Time -->
                <div class="col-md-1-5 d-flex align-items-center">
                    <select asp-for="Filter.SortOrder" name="Filter.SortOrder" class="form-select" asp-items="@ViewBag.SortOptions">
                        <option value="">Sắp xếp</option>
                    </select>
                </div>
                <!-- Filter by Status -->
                <div class="col-md-1-5 d-flex align-items-center">
                    <select asp-for="Filter.FilterByStatus" name="Filter.FilterByStatus" class="form-select" asp-items="@ViewBag.StatusList">
                        <option value="">Trạng thái</option>
                    </select>
                </div>
                <!-- Filter by Roles -->
                <div class="col-md-1-5 d-flex align-items-center">
                    <select asp-for="Filter.FilterByRole" name="Filter.FilterByRole" class="form-select" asp-items="@ViewBag.RoleList">
                        <option value="">Vai trò</option>
                    </select>
                </div>
                <!-- Optional: Nút Reset -->
                <div class="col-md-1-5 d-flex align-items-center">
                    <a href="/admin/product/" class="btn btn-secondary w-100">Reset bộ lọc</a>
                </div>
            </div>
        </form>
        <div class="row mb-3">
            <table class="table table-hover align-middle">
                <thead class="table-background">
                    <tr>
                        <th>ID</th>
                        <th>Tên</th>
                        <th>Email</th>
                        <th>Tài khoản</th>
                        @* <th>Mật khẩu</th> *@
                        <th>Vai trò</th>
                        <th>Trạng thái</th>
                        <th>Ngày tạo</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.Id.ToString().Substring(0, 16)</td>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>@user.Username</td>
                            @* <td>@user.password</td> *@
                            <td>@user.Role</td>
                            <td>@user.CreatedAt?.ToString("dd/MM/yyyy")</td>
                            <td>@user.Status</td>
                            <td>
                                <form asp-controller="AdminUser" asp-action="Update" method="get" style="display:inline;">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="btn btn-sm btn-primary" title="Chỉnh sửa">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>
                                </form>
                                @* <form asp-controller="User" asp-action="Delete" method="post" style="display:inline;"
                              onsubmit="return confirm('Bạn có chắc muốn xoá user này?');">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-danger" title="Xoá">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form> *@
                                <button type="submit" class="btn btn-sm btn-danger delete-user" data-id="@user.Id" title="Xoá">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="pagination-box">
    <nav>
        <ul class="pagination justify-content-center">

            <!-- Previous button -->
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1 })" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            <!-- Page numbers -->
            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                </li>
            }

            <!-- Next button -->
            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1 })" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>

        </ul>
    </nav>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('.delete-user').click(function () {
            const btn = $(this);
            const id = btn.data('id');

            if (confirm("Bạn có chắc muốn xóa?")) {
                $.ajax({
                    url: '/admin/user/Delete',
                    type: 'POST',
                    data: {
                        id: id,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (res) {
                        if (res.success) {
                            btn.closest('tr').remove();
                            showToast('success', res.message); // tuỳ hàm hiển thị toast hoặc alert
                        } else {
                            showToast('error', res.message);
                        }
                    },
                    error: function () {
                        showToast('error', 'Có lỗi xảy ra.');
                    }
                });
            }
        });
        // Hàm toast đơn giản
                    function showToast(type, message) {
            let toastId = 'toast-' + type;
            let existing = $('#' + toastId);

            if (existing.length) existing.remove();

            let toast = `
                <div id="${toastId}" class="toast show text-white ${toastId}"
                     style="position: fixed; top: 20px; right: 20px; z-index: 9999">
                    ${message}
                </div>`;
            $('body').append(toast);

            setTimeout(function () {
                $('#' + toastId).remove();
            }, 2000); // ✅ thời gian hiển thị: 2.5 giây
        }

        });
    </script>
}
