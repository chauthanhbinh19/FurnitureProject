@model FurnitureProject.Models.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Trang chủ";
}
<div id="toast-container" style="position: fixed; top: 20px; right: 20px; z-index: 9999;"></div>

<div class="container">
    <section class="mb-5 d-flex gap-4">
        <div id="mainCarousel" class="carousel slide col-md-7-5" data-bs-ride="carousel" data-bs-interval="3000">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner rounded shadow">
                <div class="carousel-item active">
                    <img src="~/images/carousel1.jpg" class="d-block w-100 carousel-img-fixed image-rounded" alt="Hiện đại">
                    <div class="carousel-caption d-none d-md-block" style="background-color: rgba(0, 0, 0, 0.4); border-radius: 1rem;">
                        <h5>Hiện đại</h5>
                        <p>Thêm phong cách cho phòng khách của bạn với bộ sưu tập sofa mới nhất.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/images/carousel2.jpg" class="d-block w-100 carousel-img-fixed image-rounded" alt="Sang trọng">
                    <div class="carousel-caption d-none d-md-block" style="background-color: rgba(0, 0, 0, 0.4); border-radius: 1rem;">
                        <h5>Sang trọng</h5>
                        <p>Khám phá các mẫu bàn ăn phù hợp cho mọi không gian.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/images/carousel3.jpg" class="d-block w-100 carousel-img-fixed image-rounded" alt="Lý tưởng">
                    <div class="carousel-caption d-none d-md-block" style="background-color: rgba(0, 0, 0, 0.4); border-radius: 1rem;">
                        <h5>Lý tưởng</h5>
                        <p>Trải nghiệm giấc ngủ tuyệt vời với các mẫu giường chất lượng cao.</p>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Trước</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Tiếp</span>
            </button>
        </div>
        <div class="col-md-4">
            <div class="position-relative rounded-4 overflow-hidden" style="height: 100%;">
                <img src="~/images/Image_5.webp" class="w-100 h-100 object-fit-cover image-rounded" alt="Hiện đại">

                <!-- Overlay mờ và chữ -->
                <div class="position-absolute top-50 start-50 translate-middle px-3 py-2 text-white text-center"
                     style="background-color: rgba(0, 0, 0, 0.4); border-radius: 1rem;">
                    <h5 class="m-0 mb-3">Hiện đại</h5>
                    <a href="/products?style=modern" class="btn btn-sm btn-light text-dark px-4 fw-medium">
                        Xem ngay
                    </a>
                </div>
            </div>
        </div>
    </section>
    

    <section class="mb-5 mt-5">
        <h3 class="text-start mb-4">Danh mục nội thất</h3>
        <div class="d-flex flex-nowrap justify-content-between gap-3 overflow-auto py-3">
            <div class="p-3 border rounded shadow-sm flex-shrink-0 flex-grow-1 text-center" style="min-width: 160px;">
                <i class="bi bi-door-closed fs-1 text-primary"></i>
                <h6 class="mt-2">Phòng khách</h6>
            </div>
            <div class="p-3 border rounded shadow-sm flex-shrink-0 flex-grow-1 text-center" style="min-width: 160px;">
                <i class="bi bi-tv fs-1 text-success"></i>
                <h6 class="mt-2">Phòng ngủ</h6>
            </div>
            <div class="p-3 border rounded shadow-sm flex-shrink-0 flex-grow-1 text-center" style="min-width: 160px;">
                <i class="bi bi-table fs-1 text-warning"></i>
                <h6 class="mt-2">Phòng ăn</h6>
            </div>
            <div class="p-3 border rounded shadow-sm flex-shrink-0 flex-grow-1 text-center" style="min-width: 160px;">
                <i class="bi bi-laptop fs-1 text-info"></i>
                <h6 class="mt-2">Văn phòng</h6>
            </div>
        </div>

    </section>

    <section class="mb-5 mt-5">
        <h3 class="mb-4 text-start">Sản phẩm nổi bật</h3>

        <div class="d-flex flex-wrap justify-content-start gap-4">
            @foreach (var product in Model.Products)
            {
                <div class="product-card-wrapper">
                    <div class="card shadow-sm rounded-3 border-0 h-100 p-2" style="width: 240px; min-width: 220px;">

                        <!-- Icon trái tim -->
                        <form asp-controller="Favourite" asp-action="ToggleFavourite" method="post" class="position-absolute" style="top: 8px; right: 12px; z-index: 10;">
                            <input type="hidden" name="productId" value="@product.Id" />
                            <button type="button"
                                    class="favourite-btn btn p-0 border-0 bg-transparent position-absolute"
                                    data-product-id="@product.Id"
                                    style="top: 8px; right: 12px; z-index: 10;"
                                    title="Yêu thích">
                                <i class="@(product.IsFavourited ? "fas" : "far") fa-heart text-@(product.IsFavourited ? "danger" : "secondary") fs-5"></i>
                            </button>

                        </form>

                        <img src="@(product.ImageUrls != null && product.ImageUrls.Count > 0
                                                                 ? product.ImageUrls[0]
                                                                 : Url.Content("~/images/No_Image_Available.jpg"))"
                                                                 class="card-img-top rounded-top" style="height: 200px; object-fit: cover;" alt="@product.Name">
                        <div class="card-body text-center">
                            <h6 class="card-title text-truncate" title="@product.Name">@product.Name</h6>
                            <p class="card-text fw-bold text-danger">
                                @if (product.DiscountPrice > 0)
                                {
                                    <span class="text-danger fw-bold">@product.DiscountPrice.ToString("N0") ₫</span>
                            
                                    <br />
                                    <span class="text-muted text-decoration-line-through">@product.Price.ToString("N0") ₫</span>
                                }
                                else
                                {
                                    <span>@product.Price.ToString("N0") ₫</span>
                                }
                            </p>
                        </div>
                        <div class="bg-white border-top-0 text-center mb-2">
                            <form asp-controller="Product" asp-action="ProductDetail" asp-route-id="@product.Id" method="get" style="display:inline;">
                                @* <input type="hidden" name="id" value="@product.Id" /> *@
                                <button type="submit" class="btn btn-outline-primary rounded-5 w-100" title="Chỉnh sửa">
                                    <i class="fas fa-eye"></i>
                                    Xem chi tiết
                                </button>
                            </form>
                        </div>
                        <div class="bg-white border-top-0 text-center">
                            <form asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.Id" method="post" style="display:inline;">
                                <button type="button" 
                                        data-product-id="@product.Id"
                                        data-quantity="1"
                                        class="btn btn-outline-danger addToCart-btn rounded-5 w-100" title="Chỉnh sửa">
                                    <i class="fas fa-cart-shopping"></i>
                                    Thêm vào giỏ
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
    
    <section class="mb-5 mt-5">
        <h3 class="text-start mb-4">Khám phá theo phong cách</h3>
        <div class="d-flex flex-nowrap justify-content-between gap-3 overflow-auto py-3">
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="~/images/style-modern.jpg" class="card-img-top" alt="Hiện đại" style="height: 300px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">Phong cách hiện đại</h5>
                        <p class="card-text">Thiết kế tối giản, tinh tế phù hợp với không gian sống hiện đại.</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="~/images/style-classic.jpg" class="card-img-top" alt="Cổ điển" style="height: 300px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">Cổ điển sang trọng</h5>
                        <p class="card-text">Đường nét tinh xảo và chất liệu cao cấp thể hiện đẳng cấp sống.</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="~/images/style-boho.jpg" class="card-img-top" alt="Bohemian" style="height: 300px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">Bohemian phóng khoáng</h5>
                        <p class="card-text">Sắc màu rực rỡ và cá tính cho những ai yêu nghệ thuật tự do.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="mb-5 mt-5 bg-light p-4 rounded">
        <div class="row text-center">
            <div class="col-md-3">
                <i class="bi bi-box-seam fs-2 text-primary"></i>
                <h6 class="mt-2">Miễn phí giao hàng</h6>
            </div>
            <div class="col-md-3">
                <i class="bi bi-arrow-repeat fs-2 text-success"></i>
                <h6 class="mt-2">Đổi trả trong 7 ngày</h6>
            </div>
            <div class="col-md-3">
                <i class="bi bi-shield-check fs-2 text-info"></i>
                <h6 class="mt-2">Bảo hành 1-3 năm</h6>
            </div>
            <div class="col-md-3">
                <i class="bi bi-star fs-2 text-warning"></i>
                <h6 class="mt-2">Chất lượng cao cấp</h6>
            </div>
        </div>
    </section>
    
    <section class="mb-5 mt-5">
        <h3 class="text-center mb-4">Khách hàng nói gì về chúng tôi</h3>
        <div id="testimonialCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner text-center">
                <div class="carousel-item active">
                    <blockquote class="blockquote">
                        <p class="mb-3">"Chất lượng sản phẩm rất tuyệt vời, giao hàng nhanh và đóng gói kỹ."</p>
                        <footer class="blockquote-footer">Nguyễn Văn A</footer>
                    </blockquote>
                </div>
                <div class="carousel-item">
                    <blockquote class="blockquote">
                        <p class="mb-3">"Mẫu mã hiện đại, giá cả hợp lý, rất hài lòng khi mua ở đây."</p>
                        <footer class="blockquote-footer">Trần Thị B</footer>
                    </blockquote>
                </div>
            </div>
        </div>
    </section>

</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('.favourite-btn').on('click', function () {
                var button = $(this);
                var icon = button.find('i');
                var productId = button.data('product-id');

                $.ajax({
                    url: '/favourite/toggle-favourite',
                    type: 'POST',
                    data: { productId: productId },
                    success: function (response) {
                        if (response.success === false && response.redirectUrl) {
                            window.location.href = response.redirectUrl;
                            return;
                        }

                        if (response.success) {
                            if (response.status === "added") {
                                icon.removeClass("far text-secondary").addClass("fas text-danger");
                            } else if (response.status === "removed") {
                                icon.removeClass("fas text-danger").addClass("far text-secondary");
                            }
                        } else {
                            alert(response.message || "Thao tác thất bại.");
                        }
                    },
                    error: function () {
                        console.error("Lỗi khi gửi yêu cầu yêu thích.");
                    }
                });
            });

            $('.addToCart-btn').on('click', function () {

                var button = $(this);
                var icon = button.find('i');
                var productId = button.data('product-id');
                var quantity = button.data('quantity');

                $.ajax({
                    url: '/cart/ajax/add-to-cart',
                    type: 'POST',
                    data: { productId: productId,
                            quantity: quantity},
                    success: function (response) {
                        if (response.success === false && response.redirectUrl) {
                            window.location.href = response.redirectUrl;
                            return;
                        }

                        if (response.success) {
                            showToast(response.message || "Thêm thành công", "success");
                        } else {
                            showToast(response.message || "Thao tác thất bại", "error");
                        }
                    },
                    error: function () {
                        console.error("Lỗi khi gửi yêu cầu yêu thích.");
                    }
                });
            });
        });
        function showToast(message, type = "success") {
            const toastId = "toast-" + type + "-" + Date.now();

            const toast = `
                <div id="${toastId}" class="toast toast-${type} show" style="margin-bottom: 10px;">
                    ${message}
                </div>
            `;

            $("#toast-container").append(toast);

            // Tự động ẩn sau 3 giây
            setTimeout(() => {
                $("#" + toastId).fadeOut(500, function () { $(this).remove(); });
            }, 2500);
        }
    </script>

}