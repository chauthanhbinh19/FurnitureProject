@{
    ViewData["Title"] = "Trang chủ dashboard";
}
<div class="container-fluid px-4 py-4">
    <!-- Tổng quan -->
    <div class="row mb-3 d-flex flex-wrap gap-4 justify-content-between">
        <div class="col-md-2 col-sm-6 rounded-3">
            <div class="bg-white rounded-3 p-3 shadow-sm text-center">
                <i class="bi bi-currency-dollar fs-3 text-primary"></i>
                <div class="text-uppercase small">Doanh thu</div>
                <div class="fw-bold fs-5">$2,297,201</div>
            </div>
        </div>
        <div class="col-md-2 col-sm-6 rounded-3">
            <div class="bg-white rounded-3 p-3 shadow-sm text-center">
                <i class="bi bi-bank fs-3 text-purple"></i>
                <div class="text-uppercase small">Lợi nhuận</div>
                <div class="fw-bold fs-5">$286,397</div>
            </div>
        </div>
        <div class="col-md-2 col-sm-6rounded-3">
            <div class="bg-white rounded-3 p-3 shadow-sm text-center">
                <i class="bi bi-truck fs-3 text-danger"></i>
                <div class="text-uppercase small">Đơn hàng</div>
                <div class="fw-bold fs-5">5009</div>
            </div>
        </div>
        <div class="col-md-2 col-sm-6 rounded-3">
            <div class="bg-white rounded-3 p-3 shadow-sm text-center">
                <i class="bi bi-person fs-3 text-info"></i>
                <div class="text-uppercase small">Khách hàng</div>
                <div class="fw-bold fs-5">793</div>
            </div>
        </div>
        <div class="col-md-2 col-sm-6 rounded-3">
            <div class="bg-white rounded-3 p-3 shadow-sm text-center">
                <i class="bi bi-calculator fs-3 text-warning"></i>
                <div class="text-uppercase small">Số lượng bán</div>
                <div class="fw-bold fs-5">37,873</div>
            </div>
        </div>
    </div>

    <!-- Chart & Ranking -->
    <div class="row mb-3 d-flex flex-wrap gap-4">
        <div class="col-md-7-5">
            <div class="bg-white rounded-3 p-4 shadow-sm">
                <h6 class="fw-bold mb-3">Sales Performance</h6>
                <canvas id="lineChart"></canvas>
            </div>
        </div>
        <div class="col-md-4">
            <div class="bg-white rounded-3 p-4 shadow-sm">
                <h6 class="fw-bold mb-3">Region Performance</h6>
                <canvas id="barChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Ranking & Ratio -->
    <div class="row mb-3 d-flex flex-wrap gap-4">
        <div class="col-md-7-5">
            <div class="bg-white rounded-3 p-4 shadow-sm">
                <h6 class="fw-bold mb-3">Sub-category Ranking</h6>
                <table class="table table-borderless">
                    <thead class="text-muted">
                        <tr>
                            <th>Item</th>
                            <th>Category</th>
                            <th>Quantity</th>
                            <th>Sales</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr><td>Phones</td><td>Technology</td><td>3,289</td><td>$330,007</td></tr>
                        <tr><td>Chairs</td><td>Furniture</td><td>2,356</td><td>$328,449</td></tr>
                        <tr><td>Storage</td><td>Office Supplies</td><td>3,158</td><td>$223,844</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-4">
            <div class="bg-white rounded-3 p-4 shadow-sm">
                <h6 class="fw-bold mb-3">Performance Ratio</h6>
                <div class="progress" style="height: 30px;">
                    <div class="progress-bar bg-primary" style="width: 88.91%;">Revenue</div>
                    <div class="progress-bar bg-purple" style="width: 11.09%;">Profit</div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Chart script -->
<script>
    const lineChart = new Chart(document.getElementById('lineChart'), {
        type: 'line',
        data: {
            labels: ['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec'],
            datasets: [{
                label: 'Revenue',
                data: [0.09, 0.07, 0.2, 0.14, 0.15, 0.14, 0.15, 0.16, 0.3, 0.2, 0.35, 0.32],
                borderColor: '#6C63FF',
                backgroundColor: 'rgba(108,99,255,0.2)',
                fill: true,
                tension: 0.4
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: { beginAtZero: true }
            }
        }
    });

    const barChart = new Chart(document.getElementById('barChart'), {
        type: 'bar',
        data: {
            labels: ['West', 'East', 'Central', 'South'],
            datasets: [
                {
                    label: 'Furniture',
                    data: [700, 600, 500, 400],
                    backgroundColor: '#6366F1'
                },
                {
                    label: 'Office Supplies',
                    data: [900, 800, 600, 500],
                    backgroundColor: '#8B5CF6'
                },
                {
                    label: 'Technology',
                    data: [800, 700, 650, 550],
                    backgroundColor: '#EF4444'
                }
            ]
        },
        options: {
            responsive: true,
            indexAxis: 'y',
            scales: {
                x: { stacked: true },
                y: { stacked: true }
            }
        }
    });
</script>